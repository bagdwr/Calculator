<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginTop="160dp"
        android:textAlignment="textEnd"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"
            />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toRightOf="@id/bt1"
            app:layout_constraintRight_toLeftOf="@id/bt3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toRightOf="@id/bt2"
            app:layout_constraintRight_toLeftOf="@id/btMulty"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"/>

        <Button
            android:id="@+id/btMulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toRightOf="@id/bt3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#FFC757"/>

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt5"
            app:layout_constraintTop_toBottomOf="@id/bt1"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"/>

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toRightOf="@id/bt4"
            app:layout_constraintRight_toLeftOf="@id/bt6"
            app:layout_constraintTop_toBottomOf="@id/bt2"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"/>

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/bt5"
            app:layout_constraintRight_toLeftOf="@id/btDiv"
            app:layout_constraintTop_toBottomOf="@id/bt3"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"
           />


        <Button
            android:id="@+id/btDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/bt6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btMulty"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#FFC757"
            />

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt8"
            app:layout_constraintTop_toBottomOf="@id/bt4"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"
          />

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@+id/bt7"
            app:layout_constraintRight_toLeftOf="@id/bt9"
            app:layout_constraintTop_toBottomOf="@+id/bt6"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"
         />

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@+id/bt8"
            app:layout_constraintRight_toLeftOf="@id/btMin"
            app:layout_constraintTop_toBottomOf="@+id/bt6"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"
         />

        <Button
            android:id="@+id/btMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@+id/bt9"
            app:layout_constraintTop_toBottomOf="@id/btDiv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#FFC757"
            />


        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btCancel"
            app:layout_constraintTop_toBottomOf="@id/bt7"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#606060"
            />

        <Button
            android:id="@+id/btCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/bt0"
            app:layout_constraintRight_toLeftOf="@id/btEq"
            app:layout_constraintTop_toBottomOf="@id/bt8"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#C6C6C5"
            />

        <Button
            android:id="@+id/btEq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/btCancel"
            app:layout_constraintRight_toLeftOf="@id/btPlus"
            app:layout_constraintTop_toBottomOf="@id/bt9"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#C6C6C5"/>

        <Button
            android:id="@+id/btPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toRightOf="@id/btEq"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btMin"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:backgroundTint="#FFC757"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>